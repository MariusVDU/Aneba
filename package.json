  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
